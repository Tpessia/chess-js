{
  "name": "chezz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "npm install",
    "setup:prod": "npm install --only=prod",
    "start": "cross-env REACT_APP_ENVIRONMENT=local craco start",
    "build:dev": "cross-env REACT_APP_ENVIRONMENT=development craco build",
    "build:prod": "rimraf build && cross-env REACT_APP_ENVIRONMENT=production craco build",
    "test": "craco test",
    "lint": "eslint --fix --ext .js,.ts,.jsx,.tsx ./src",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@craco/craco": "^7.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/lodash-es": "^4.17.6",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "axios": "^1.2.2",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "imask": "^6.4.3",
    "immutability-helper": "^3.1.1",
    "lodash-es": "^4.17.21",
    "memoizee": "^0.4.15",
    "node-sass": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1",
    "react-scripts": "5.0.1",
    "react-toastify": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tsyringe": "^4.7.0",
    "typescript": "^4.9.4",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off",
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 1,
          "maxBOF": 0,
          "maxEOF": 0
        }
      ],
      "arrow-spacing": "warn",
      "array-bracket-spacing": [
        "warn",
        "never"
      ],
      "array-bracket-newline": [
        "warn",
        "consistent"
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "object-curly-newline": [
        "warn",
        {
          "consistent": true
        }
      ],
      "brace-style": [
        "warn",
        "1tbs"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "eol-last": [
        "warn",
        "always"
      ],
      "key-spacing": [
        "warn",
        {
          "beforeColon": false,
          "afterColon": true,
          "mode": "strict"
        }
      ],
      "comma-spacing": [
        "warn",
        {
          "before": false,
          "after": true
        }
      ],
      "no-multi-spaces": "warn",
      "new-parens": [
        "warn",
        "always"
      ],
      "quotes": [
        "warn",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "no-unreachable": "warn",
      "semi": [
        "warn",
        "always"
      ],
      "semi-style": [
        "warn",
        "last"
      ],
      "template-curly-spacing": [
        "warn",
        "never"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
